<body>
  <div class="notes-container">
    <% for (let pyq of pyqs) { %>
      <div class="semester-card">
        
        <!-- Semester Title -->
        <div class="semester-header" style="text-align: center;">
          <h3><%= pyq.semester %></h3>
        </div>
        <hr>

        <!-- Subjects -->
        <div class="subjects">
          <% for (let subject of pyq.subjects) { %>
            <a href="<%= subject.file %>" target="_blank" class="subject-chip">
              <div class="chip-title"><%= subject.title %></div>
              <div class="chip-contributor">
                contributed by: <%= subject.contributor?.username || "Unknown" %>
              </div>
            </a>
          <% } %>
        </div>

      </div>
    <% } %>
  </div>
</body>